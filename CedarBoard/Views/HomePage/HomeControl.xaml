<UserControl x:Class="CedarBoard.Views.HomePage.HomeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/" 
             xmlns:local ="clr-namespace:CedarBoard.Views.HomePage"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding Title}"/>
            <local:WorkspaceListControl/>
            <local:CreateNewButtonControl/>
            
            <ContentControl prism:RegionManager.RegionName="ContentRegion"></ContentControl>
        </StackPanel>
    </Grid>
</UserControl>