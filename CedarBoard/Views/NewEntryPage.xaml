<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CedarBoard.Views" xmlns:viewmodels="clr-namespace:CedarBoard.ViewModels"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" x:Class="CedarBoard.Views.NewEntryPage"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1050"
      Title="NewEntryPage">

    <Grid>
        <ui:TextBlock HorizontalAlignment="Left" Margin="70,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="90" Width="480">
            <ui:TextBlock.Effect>
                <DropShadowEffect Color="Gray" Direction="315" ShadowDepth="9" BlurRadius="10" />
            </ui:TextBlock.Effect>
            <Run Foreground="LimeGreen" FontSize="60" Language="ja-jp" Text="新規作成"/>
        </ui:TextBlock>

        <ui:Button HorizontalAlignment="Left" Margin="715,223,0,0" VerticalAlignment="Top" 
                   RenderTransformOrigin="0.5,0.5" Width="300" Height="43" FontSize="20" Background="LightGray" >
            <ui:Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}"
                    BorderBrush="Black"
                    BorderThickness="3"
                    CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </ui:Button.Template>
            <ui:TextBlock TextWrapping="Wrap" Text="戻る"/>
        </ui:Button>
        
        <ui:Button HorizontalAlignment="Left" Margin="715,494,0,0" VerticalAlignment="Top" 
                   RenderTransformOrigin="0.5,0.5" Width="300" Height="43" FontSize="20" Background="White" >
            <ui:Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="Black"
                        BorderThickness="3"
                        CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </ui:Button.Template>
            <ui:TextBlock TextWrapping="Wrap" Text="この内容で新規作成"/>
        </ui:Button>
        <ui:DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="35,230,365,95"/>
    </Grid>
</Page>
