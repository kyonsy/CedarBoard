<UserControl x:Class="CedarBoard.Views.NewEntryUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" Height="700" Width="1050">
    <Grid>
        <ui:TextBlock HorizontalAlignment="Left" Margin="70,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="90" Width="480">
            <ui:TextBlock.Effect>
                <DropShadowEffect Color="Gray" Direction="315" ShadowDepth="9" BlurRadius="10" />
            </ui:TextBlock.Effect>
            <Run Foreground="LimeGreen" FontSize="60" Language="ja-jp" Text="新規作成"/>
        </ui:TextBlock>

        <ui:Button HorizontalAlignment="Left" Margin="715,223,0,0" VerticalAlignment="Top" 
             RenderTransformOrigin="0.5,0.5" Width="300" Height="43" FontSize="20" Background="LightGray" Command="{Binding BackHome}">
            <ui:Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}"
              BorderBrush="Black"
              BorderThickness="3"
              CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </ui:Button.Template>
            <ui:TextBlock TextWrapping="Wrap" Text="戻る"/>
        </ui:Button>

        <ui:Button HorizontalAlignment="Left" Margin="715,494,0,0" VerticalAlignment="Top" 
             RenderTransformOrigin="0.5,0.5" Width="300" Height="43" FontSize="20" Background="White" Command="{Binding NewEntry}">
            <ui:Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}"
                  BorderBrush="Black"
                  BorderThickness="3"
                  CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center"
                      VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </ui:Button.Template>
            <ui:TextBlock TextWrapping="Wrap" Text="この内容で新規作成"/>
        </ui:Button>
        <Border />

        <Grid Margin="50,235,400,110">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Border BorderBrush="Black" BorderThickness="5"  Grid.Row="0" Grid.Column="0">
                <TextBlock Text="作品名" FontSize="30" Background="LightGray"/>
            </Border>

            <Border BorderBrush="Black" BorderThickness="5" Grid.Row="1" Grid.Column="0">
                <TextBlock Text="作者名" FontSize="30" Background="LightGray"/>
            </Border>

            <Border BorderBrush="Black" BorderThickness="5" Grid.Row="2" Grid.Column="0">
                <TextBlock Text="保存先" FontSize="30" Background="LightGray"/>
            </Border>

            <Border BorderBrush="Black" BorderThickness="5" Grid.Row="3" Grid.Column="0">
                <TextBlock Text="使うエディタのパス" FontSize="30" Background="LightGray"/>
            </Border>

            <Border BorderBrush="Black" BorderThickness="5" Grid.Row="4" Grid.Column="0">
                <TextBlock Text="メモ" FontSize="30" Background="LightGray"/>
            </Border>

            <TextBox Grid.Row="0" Grid.Column="1" Text="無題" FontSize="30" BorderBrush="Black" BorderThickness="5"/>
            <TextBox Grid.Row="1" Grid.Column="1" Text="あなた" FontSize="30" BorderBrush="Black" BorderThickness="5"/>
            <TextBox Grid.Row="2" Grid.Column="1" Text="C:" FontSize="30" BorderBrush="Black" BorderThickness="5"/>
            <TextBox Grid.Row="3" Grid.Column="1" Text="notepad" FontSize="30" BorderBrush="Black" BorderThickness="5"/>
            <TextBox Grid.Row="4" Grid.Column="1" Text="メモメモ" FontSize="30" BorderBrush="Black" BorderThickness="5"/>
        </Grid>
    </Grid>
</UserControl>
